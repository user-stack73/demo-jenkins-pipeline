pipeline {
    agent {
        docker { image 'node:18' }
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/<ton-utilisateur>/demo-jenkins-pipeline.git'
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run tests') {
            steps {
                sh 'npm test'
            }
            post {
                always {
                    junit 'reports/junit.xml'
                }
            }
        }
    }

    post {
        success {
            echo '✅ Build et tests réussis !'
        }
        failure {
            echo '❌ Échec du pipeline ! Vérifie les logs.'
        }
    }
}
